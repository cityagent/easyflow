<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lecoder.easyflow.modules.flowlong.mapper.ApprovalTemplateMapper">


    <select id="selectList" resultType="org.lecoder.easyflow.modules.flowlong.entity.ApprovalTemplate">
        select * from flw_approval_template template
        <where>
            <if test="name != null and name != ''">
                    and template.name like concat('%',#{name},'%')
            </if>
        </where>

    </select>
</mapper>
